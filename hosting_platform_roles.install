      'uid' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'description' => t('The platform\'s admin user\'s {user}.uid'),
      ),
    ),
  );

  $schema['hosting_platform_roles_roles'] = array(
    'description' => t('Stores platform roles information.'),
